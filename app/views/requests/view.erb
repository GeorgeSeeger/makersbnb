<div id='requests-made'>
  <h2>Requests I have made:</h2>
  <% current_user.requests.each do |request| %>
    <h3> <a id='space-link-<%=request.space.id%>' href='/spaces/<%=request.space.id%>'><%=request.space.name%></a></h3>
    <h4> <a id='request-link-<%=request.id%>' href='/request/<%=request.id%>' > <%=request.date%> </a> </h4>
  <%end%>
</div>
<div id='requests-received'>
  <h2>Requests I have received:</h2>
  <% current_user.spaces.each do |space| %>
    <% space.requests.each do |request| %>
      <h3> <a href='/spaces/<%=space.id%>'><%=space.name%></a></h3>
      <span>Request from: <%=request.user.username%> </span>
      <% if !request.accepted && !request.rejected %>
        <form action='/requests/view' method='post'>
          <input type='hidden' name="accepted"  value="true"/>
          <input type='hidden' name="request_id"  value="<%=request.id%>"/>
            <input id='approve-request' type="submit" value="approve" />
        </form>
        <form action='/requests/view' method='post'>
          <input type='hidden' name="request_id"  value="<%=request.id%>"/>
            <input id='reject-request' type="submit" value="reject" />
        </form>
      <% elsif request.accepted %>
       <h4> Request accepted </h4>
       <% elsif request.rejected %>
       <h4> Request denied </h4>
      <% end %>
    <%end%>
  <%end%>
</div>
