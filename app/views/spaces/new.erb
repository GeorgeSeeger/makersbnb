<div class='input-group'>
  <form class='form' action='/spaces' method='post' enctype="multipart/form-data">
  
    <h3>List your property</h3>
    <div class="form-group">
      <input id='name' type="text" placeholder="Property Name" name="name" />
    </div>
    <div class="form-group">
      <input id='description' type="text" placeholder="Property Description" name="description" />
    </div>
    <div class="form-group">
      <label for="capacity">Capacity: </label>
      <select id='capacity' name="capacity">
        <% (1..12).each do |number| %>
        <option value= '<%=number%>'><%=number%></option>
        <%end%>
      </select>
    </div>
    <div class="form-group">
      <input id='price' type="number" placeholder="Price" name="price" />

    </div>
    <div class="form-group">
      <input id='start_date' type="date" palceholder="Available from:" name="start_date" />
    </div>
    <div class="form-group">
      <input id='end_date' type="date" placeholder="Available to:" name="end_date" />
    </div>
    <div class="form-group">
      <input type="file" name="file">
    </div>
    <div class="form-group">
      <input id='list_space' type="submit" value="List space" />
    </div>
  </form>
